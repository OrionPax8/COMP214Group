
  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row -->
                <table class="table">
                <thead>
                    <tr>
                    <th>Employee ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Hire Date</th>
                    <th>Job ID</th>
                    <th>Salary</th>
                    <th></th>
                    <th></th>
                    </tr>
                </thead>
            
            <tbody>
            <% for(let count = 0; count < employeeList.length; count++){%>
            <tr> 
                <td> <%= employeeList[count].EMPLOYEE_ID %></td>
                <td> <%= employeeList[count].FIRST_NAME %></td>
                <td> <%= employeeList[count].LAST_NAME %></td>
                <td> <input type="text" class="form-control" id="email<%= count %>" value="<%= employeeList[count].EMAIL %>"></td>
                <td> <input type="text" class="form-control" id="phone<%= count %>" value="<%= employeeList[count].PHONE_NUMBER %>"></td>
                <td> <%= employeeList[count].HIRE_DATE.toLocaleDateString('el-GR') %></td>
                <td> <%= employeeList[count].JOB_ID %></td>
                <td> <input type="text" class="form-control" id="salary<%= count %>" value="<%= employeeList[count].SALARY %>"></td>
                <td> <a href="#" class="btn btn-primary">Update</a></td>
                <td><form action="#" method="POST"><button type="submit" class="btn btn-danger">Delete</button></form></td>
            </tr>
            <% } %>
            </tbody>

            </table>
        </div>
    </div>
  </main>
